{
	"extends": "@marais/tsconfig",
	"compilerOptions": {
		"outDir": "types",
		"noEmit": false,
		"declaration": true,
		"rootDir": "./src",
		"baseUrl": ".",
		"target": "ES2019",
		"removeComments": false,
		"lib": ["DOM", "ESNext"],
		"paths": {
			"diary": ["src/index.ts"],
			"diary/*": ["src/*"]
		}
	},
	"include": ["src/*.ts"],
	"exclude": ["node_modules"]
}
